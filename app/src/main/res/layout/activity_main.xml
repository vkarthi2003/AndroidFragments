<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    android:id="@+id/main">

    <!-- Include the layouts of both activities here -->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="STUDENT DETAILS"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <fragment
        android:id="@+id/studentBasicDetailsFragment"
        android:name="com.example.androidfragments.StudentBasicDetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />

    <fragment
        android:id="@+id/studentMarkFragment"
        android:name="com.example.androidfragments.StudentMarkFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />




</LinearLayout>
